{% extends "/login/content.twig" %}
{% block content %}
<div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">{{'admin.control-panel-html'|t}}</h1>
                                </div>
                                <form id="{{str.random(10)}}" class="user" data-form="true" form="login" action="{{url('current')}}" method="POST" data-type="JSON" autocomplete="{{str.random(10)}}">
                                <input type="hidden" name="token" value="{{csrf_token}}">
                                    <div class="form-group">
                                        <div class="controls">
                                        <input type="text" class="form-control" name="username" placeholder="{{'admin.placeholder.username'|t}}">
                                        <span class="information"></span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="controls">
                                        <input type="password" class="form-control" name="password" placeholder="{{'admin.placeholder.password'|t}}">
                                        <span class="information"></span>
                                        </div>
                                    </div>
                                    <hr>
                                    <button type="submit" class="btn btn-success btn-user btn-block font-weight-bold text-uppercase">{{'admin.sign-in'|t}}</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}