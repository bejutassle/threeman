                  <a class="dropdown-item d-flex align-items-center" data-pointer>
                     <div class="mr-3">
                        <div class="icon-circle border">
                           <img src="{{img(app.option('logo'))}}" alt="site-logo" class="img-fluid">
                        </div>
                     </div>
                     <div>
                        <span class="font-weight-bold">{{'admin.no-notification'|t}}</span>
                     </div>
                  </a>
