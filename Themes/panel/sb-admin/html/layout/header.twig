         <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
         <i class="fa fa-bars"></i>
         </button>
         <!-- Topbar Search -->
         <div class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search" autocomplete="off">
            <div class="input-group">
               <input type="text" id="sidebar-search-input" class="form-control bg-light small" placeholder="{{'admin.placeholder.page-search'|t}}" autocomplete="off">
               <div class="input-group-append">
                  <button class="btn btn-primary" type="button">
                  <i class="fas fa-search fa-sm"></i>
                  </button>
               </div>
            </div>
         </div>
         <!-- Topbar Navbar -->
