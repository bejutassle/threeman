{% extends "content.twig" %}
{% block content %}

<section class="container-fluid">

<form id="settingsUpdate" data-form="true" form="refresh" action="{{url('settings')}}" method="POST" data-type="JSON">
  <input type="hidden" name="token" value="{{csrf_token}}">
  <input type="hidden" name="form" value="contact">

    <div class="row">
        <div class="col-12">
            <h1 class="h5 mb-1 text-gray-800">{{pagetitle}}</h1>
            <div class="card shadow mb-4">
                <div class="card-body">

                        <div class="form-group">
                            <div class="controls">
                                <label class="control-label">{{'admin.form.address'|t}}</label>
                                <textarea class="form-control" name="contact-address" cols="30" rows="10" data-editor="true">{{app.option('contact-address')}}</textarea>
                                <span class="information"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="controls">
                                <label class="control-label">{{'admin.form.phone'|t}}</label>
                                <textarea class="form-control" name="contact-phone" cols="30" rows="10" data-editor="true">{{app.option('contact-phone')}}</textarea>
                                <span class="information"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="controls">
                                <label class="control-label">{{'admin.form.email'|t}}</label>
                                <textarea class="form-control" name="contact-email" cols="30" rows="10" data-editor="true">{{app.option('contact-email')}}</textarea>
                                <span class="information"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="controls">
                                <label class="control-label">{{'admin.form.google-map'|t}}</label>
                                <textarea class="form-control" name="contact-map" cols="30" rows="10" data-editor="true">{{app.option('contact-map')}}</textarea>
                                <span class="information"></span>
                            </div>
                        </div>


                </div>
            </div>

        </div>
        <!-- /.col -->

    </div>
    <!-- /.row -->


    <div class="row">
        <div class="col-lg-12">
            <input type="submit" value="{{'admin.form.submit'|t}}" class="btn btn-block btn-primary btn-lg">
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

  </form>
</section>

<script type="text/nanoscript">
</script>

{% endblock %}