{% extends "content.twig" %}
{% block content %}

<section class="container-fluid">

<form id="settingsUpdate" data-form="true" form="refresh" action="{{url('settings')}}" method="POST" data-type="JSON">
  <input type="hidden" name="token" value="{{csrf_token}}">
  <input type="hidden" name="form" value="maintenance">

    <div class="row">
        <div class="col-12">
            <h1 class="h5 mb-1 text-gray-800">{{pagetitle}}</h1>
            <div class="card shadow mb-4">
                <div class="card-body">

                        <div class="form-group" data-main-collapse="maintenance-status">
                            <div class="controls">
                                <label class="control-label">{{'admin.form.maintenance-mode'|t}}</label>
                                <div class="radio">
                                  <label>
                                    <input type="radio" name="maintenance" value="1" {% if app.option('maintenance') == 1 %}checked{% endif %}>
                                    {{'admin.form.yes'|t}}
                                  </label>
                                </div>
                                <div class="radio">
                                  <label>
                                    <input type="radio"  name="maintenance" value="0" {% if app.option('maintenance') == 0 %}checked{% endif %}>
                                    {{'admin.form.no'|t}}
                                  </label>
                                </div>
                                <span class="information"></span>
                            </div>
                        </div>


                        <div class="form-group" data-sub-collapse="maintenance-status" data-val-collapse="1">
                            <div class="controls">
                                <label class="control-label">{{'admin.form.maintenance-content'|t}}</label>
                                <textarea class="form-control" name="maintenance-content" cols="30" rows="10" data-editor="true">{{app.option('maintenance-content')}}</textarea>
                                <span class="information"></span>
                            </div>
                        </div>

                </div>
            </div>

        </div>
        <!-- /.col -->

    </div>
    <!-- /.row -->


    <div class="row">
        <div class="col-lg-12">
            <input type="submit" value="{{'admin.form.submit'|t}}" class="btn btn-block btn-primary btn-lg">
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->

  </form>
</section>

<script type="text/nanoscript">
</script>

{% endblock %}